<h2>Modifica la película que quieras</h2>
<form>
	<table class="form">
	
		<input type="hidden" name="id" value="<%= @pelicula.id %>" /> 
<tr>
	<td><label>Titulo:</label></td>
	<td><input type="text" name="titulo" value="<%= @pelicula.titulo %>" /></td>
</tr>
<tr>
	<td><label>Género: </label></td>
	<td><input type="text" name="genero" value="<%= @pelicula.genero %>" /></td>
</tr>
<tr>
	<td><label>Año</label></td>
	<td><input type="number" name="year" value="<%= @pelicula.year %>" /></td>
</tr> 
<tr>
	<td><input type="submit" formaction="/videoclub/update?id=<%= @pelicula.id %>" value="Modificar"></td>
	<td><input type="submit" formaction="/videoclub/index" value="Volver sin Guardar"</td>
</tr>
	
	</table>
</form>

<% if @pelicula != nil && @pelicula.errors.any? %>
	<ul>
	 	<% @pelicula.errors.full_messages.each do |mensaje_error| %>
	 	<li class="errorValidacion"><%= mensaje_error %></li>
	 	<% end %>
	</ul>
<% end %>
<% if @resultado = false then %>
<p>La película no se pudo actualizar</p>
<% end %>