class TiendaController < ApplicationController

def index
  @discos = Disco.all
end

def create
  id = params[:id]
  album = params[:album]
  artista = params[:artista]
  año = params[:year]
  
  hashDisco = {}
  hashDisco[:id] = id
  hashDisco[:album] = album
  hashDisco[:year] = año
  
  @disco = Disco.create(hashDisco)
    if @disco.errors.any? then
      puts "BDERROR: Error"
    end
    @discos = Disco.all
    render :index  
end

def searchByYear
    year = params[:year]
    @encontrados = Disco.where(["year LIKE ?", "%#{year}%"])
    render :busquedas
end

def searchByArtist
    artista = params[:artista]
    @encontrados = Disco.where(["artista LIKE ?", "%#{artista}%"])
    render :busquedas
end

