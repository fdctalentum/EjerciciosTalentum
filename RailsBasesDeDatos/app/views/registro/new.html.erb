<h1>Lista de registros</h1>
<table>
	<tr><th>Id</th>
		<th>Titulo</th>
		<th>Comentarios</th>		
	</tr>
	<% for registro in @registros %>
	
	<tr><td><%= registro.id %> </td>
		<td><%= registro.titulo %></td>
		<td><%= registro.comentarios %></td>
		<td><a href="/registro/delete?titulo=<%=registro.titulo%>">Borrar</a></td>
		<td><a href="/registro/modificar_vista?id=<%=registro.id%>">Modificar</a></td>
	</tr>
	
	<% end %>
	
</table>

<%= form_tag({controller: "registro", action: "create" }, method: "get") do %>
<%= label_tag(:titulo, "Título:") %>
<%= text_field_tag(:titulo, nil, placeholder: "Escribe aquí el título") %> <br />
<%= label_tag(:comentarios, "Comentarios") %>
<%= text_field_tag(:comentarios, nil, placeholder: "Comentario...") %> <br /> <br />
<%= submit_tag("Crear")%>

<% end %>

<% if @registro != nil && @registro.errors.any? %>
	<ul>
	 	<% @registro.errors.full_messages.each do |mensaje_error| %>
	 	<li class="errorValidacion"><%= mensaje_error %></li>
	 	<% end %>
	</ul>
<% end %>
